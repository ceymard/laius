{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "inlineSources": true,
	"skipLibCheck": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./module",
        "lib": ["es6", "dom"],
        "types": ["node"]
    },
    "files": [
        "./src/main.ts", "./src/bin.ts"
    ]

}
